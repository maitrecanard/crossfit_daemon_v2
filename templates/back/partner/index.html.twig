{% extends 'back/back_base.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}
    <h1 class="h3 mb-0 text-gray-800">Liste des points de vente partenaire</h1>
    </div>
    <a class="btn btn-success btn-icon-split mb-4" href="{{ path('app_back_partner_new') }}">  <span class="icon text-white-50">
            <i class="fas fa-check"></i>
        </span>
        <span class="text">Nouveau partenaire</span></a>
    <div class="card shadow mb-4">

        <div class="card-body">
        <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead style="position:static; top:0;">
            <tr>
                <th>Référence</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Publié</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.name }}</td>
                <td>{{ partner.phone }}</td>
                <td>
                    {% if partner.active == null %}
                        Non
                    {% elseif partner.active == 0 %}
                        Non
                    {% else %}
                        Oui
                    {% endif %}
                    </td>
                <td>{{ partner.createdAt ? partner.createdAt|date('H:i:s d/m/Y') : '' }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('app_back_partner_show', {'id': partner.id}) }}">Aperçu</a>
                    <a class="btn btn-outline-secondary" href="{{ path('app_back_partner_edit', {'id': partner.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucune donnée disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
