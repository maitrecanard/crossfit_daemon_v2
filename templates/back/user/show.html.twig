{% extends 'back/back_base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="h3 mb-0 text-gray-800">Utilisateur {{ user.firstname }} {{ user.lastname }}</h1>
    </div>
<div style="display:flex;justify-content:space-between;">
   <a  class="btn btn-secondary btn-icon-split mb-4"  href="{{ path('app_back_user_index') }}">   <span class="icon text-white-50">
            <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text">Retour à la liste</span>
    </a>
      </div>
       <div class="card shadow mb-4">
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Référene du compte</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                     {% if user.roles.0 == "ROLE_SUPADMIN" %}
                        Super Admin
                    {% elseif user.roles.0 == "ROLE_ADMIN" %}
                        Administrateur
                    {% else %}
                        Utilisateur
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>
</div>
</div>


