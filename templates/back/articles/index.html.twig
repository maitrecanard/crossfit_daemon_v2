{% extends 'back/back_base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1 class="h3 mb-0 text-gray-800">Tous les articles</h1>
</div>
 <div class="card shadow mb-4">
                   
        <div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Title</th>
               
                <th>Activ</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>#{{ article.id }}</td>
                <td>{{ article.title }}</td>
                
                <td>{{ article.activ ? 'En ligne' : 'Hors ligne' }}</td>
                <td>
                    <a href="{{ path('app_back_articles_show', {'id': article.id}) }}"class="btn btn-info btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">Afficher</span>
                                    </a>
                    <a href="{{ path('app_back_articles_edit', {'id': article.id}) }}"class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                           <i class="fas fa-arrow-right"></i>
                                        </span>
                                        <span class="text">Editer</span>
                                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
