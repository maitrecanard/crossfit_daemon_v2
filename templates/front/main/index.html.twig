{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="slider-area position-relative">
        <div class="slider-active">

            <div class="single-slider  align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-9 col-lg-9 col-md-10">
                            <div class="hero__caption">

                                <h1 data-animation="fadeInLeft" data-delay="0.4s"><span>CROSSFIT</span><br> DAEMON</h1>
                                
                            </div>
                        </div>
                    </div>
                </div>          
            </div>
        </div>
    </div> 
    <section id="lecross" class="team-area fix">
        {{ article1|raw }}
    </section>
    <section id="box" class="team-area fix">
        {{ article2|raw }}
    </section>
    <section id="coach" class="team-area fix">
        {{ article3|raw }}
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/gXUblxdAI4E"></iframe>
        </div>
 
    </section>
    <section id="offres" class="team-area fix">
        {{ article4|raw }}         
    </section>
    <section id="horaires" class="team-area fix">
        <div class="container">
           
                <div class="col-xl-12">
                    <div class="section-tittle text-center mb-55 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <h2>{{ article5.title }}</h2>
                        <a class="fresco"  href="{{ article5.content }}" data-fresco-group="example" data-fresco-caption="CrossFitDaemon">
                            <img class="img-planning" src="{{ article5.content }}" width="100%">
                        </a>
                    </div>
                </div>
            
        </div>
    </section>
    <section id="tarifs" class="pricing-area section-padding40 fix">
        {{ article6|raw }}
    </section>
    <section >
        <div class=" img-crossfit section-tittle text-center mb-55 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
            <a href="assets/img/hero/DSC_0836.jpg" data-caption="Optional caption attribute" rel="lightbox">
                <img src="assets/img/hero/DSC_0836.jpg" alt="">
            </a>
        </div>
    </section>
    <section id="contact" class="contact-section">
        <div class="col-xl-12">
            <div class="section-tittle text-center mb-55 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                <h2 class="site-section-heading mb-3">Nous contacter</h2>
            </div>
        </div>     
        <div class="form-center">
            <span>
                Pour toute demande d'information ou réclamation, veuillez nous contacter par le biais de ce formulaire (ou via <a href="https://www.facebook.com/crossfitdaemon">Facebook</a> ou <a href="https://www.instagram.com/crossfit_daemon/">Instagram</a>). 
                    Conformément à la réglementation GRPD du CNIL. Votre adresse mail sera utilisée uniquement dans le cadre d'un retour, 
                    celle-ci ne sera ni transmise ni échangée pour raison commerciale. Vous recevrez également une copie de votre message par mail (pensez à vérifier vos spams).
            </span>

                {{ form_start(form) }}
                    <div class="form_message">
                        <div class="message"></div>
                    </div>
                    {{ form_widget(form) }}
                    <button class="btn">{{ button_label|default('Envoyer') }}</button>
                {{ form_end(form) }}
 
        </div>
                <div class="col-xl-12">
                    <div class="site">    
                        <div class="container">           
                            <p class="text-map"></p>
                            <p>
                                <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d21905.55246979993!2d0.37747550267225544!3d46.66242968715498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e0!4m0!4m5!1s0x47fdbcc9ae52cffb%3A0xdbd6b186d14207af!2s5%20Route%20du%2021%C3%A8me%20Si%C3%A8cle%2C%2086360%20Chasseneuil-du-Poitou!3m2!1d46.6629955!2d0.3759071!5e0!3m2!1sfr!2sfr!4v1601140168445!5m2!1sfr!2sfr" width="100%" height="550" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0">
                                </iframe>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
